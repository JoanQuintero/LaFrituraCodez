<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccount">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="509dp">

            <TextView
                android:id="@+id/account_ViewAllOrders"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/your_Orders"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="29dp"
                android:clickable="true"
                android:text="View All"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/your_Orders"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:text="Your orders"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="285dp"
                android:layout_marginStart="13dp"
                android:orientation="vertical"
                android:textAlignment="textStart">

                <TextView
                    android:id="@+id/account_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4e7bae"
                    android:paddingLeft="5dp"
                    android:text="Personal Settings"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:paddingLeft="5dp"
                    android:text="Edit Profile"
                    android:textColor="#40ae9a"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/edit_user"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="5dp"
                    android:text="Edit User"
                    android:textColor="#40ae9a"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:paddingLeft="5dp"
                    android:text="Change Password"
                    android:textColor="#40ae9a"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/change_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:paddingLeft="5dp"
                    android:text="Preferences"
                    android:textColor="#40ae9a"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="178dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="231dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_utilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4e7bae"
                    android:paddingLeft="5dp"
                    android:text="Utilities"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/app_set_style"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="5dp"
                    android:text="App Style"
                    android:textColor="#40ae9a"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/refresh_cache"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:paddingLeft="5dp"
                    android:text="Refresh Cache"
                    android:textColor="#40ae9a"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/system_options"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:paddingLeft="5dp"
                    android:text="System Options"
                    android:textColor="#40ae9a"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/memory_usage"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="5dp"
                    android:text="Memory Usage"
                    android:textColor="#40ae9a"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>