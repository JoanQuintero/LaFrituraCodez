<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.AppBarOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/cardViewRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="@dimen/field_padding"
            android:paddingStart="@dimen/field_padding">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/recycler_view"
                android:layout_marginBottom="-29dp"
                android:text="@string/recent_posts" />

            <TextView
                android:id="@+id/recentPost_viewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/recycler_view"
                android:layout_marginBottom="-29dp"
                android:layout_marginEnd="11dp"
                android:text="@string/view_all" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recentPost_viewall"
                android:layout_marginTop="29dp">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cardViewRelative"
            android:paddingEnd="@dimen/field_padding"
            android:paddingStart="@dimen/field_padding"
            android:text="@string/user_posts" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/cardViewRelative"
            android:layout_marginEnd="13dp"
            android:paddingEnd="@dimen/field_padding"
            android:paddingStart="@dimen/field_padding"
            android:text="@string/view_all" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardYourPost"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_below="@id/textView3"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:paddingEnd="@dimen/field_padding"
            android:paddingStart="@dimen/field_padding" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cardYourPost"
            android:paddingEnd="@dimen/field_padding"
            android:paddingStart="@dimen/field_padding"
            android:text="@string/watched_posts" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/cardYourPost"
            android:layout_marginEnd="13dp"
            android:paddingEnd="@dimen/field_padding"
            android:paddingStart="@dimen/field_padding"
            android:text="@string/view_all" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_below="@id/textView5"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:paddingEnd="@dimen/field_padding"
            android:paddingStart="@dimen/field_padding" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>